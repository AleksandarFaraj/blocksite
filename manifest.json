{
  "manifest_version": 2,

  "name": "Blocksite",
  "description": "Block sites using regular expression",
  "version": "0.1",
  "icons": { "16": "images/icon16.png",
             "32": "images/icon32.png",
             "48": "images/icon48.png",
             "128": "images/icon128.png" },
             
  "options_ui": {
      "page": "options.html",
      "chrome_style": true
  },

  "background": {
    "scripts":["js/background.js"],
    "persistent": false
  },
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ]
}
