{
  "manifest_version": 2,

  "name": "Blocksite",
  "short_name": "Blocksite",
  "description": "Light and easy way to block sites",
  "version": "0.1.4",
  "homepage_url": "https://github.com/hektr/blocksite",
  "author": "hektr",
  "icons": { "16": "images/icon16.png",
             "32": "images/icon32.png",
             "48": "images/icon48.png",
             "128": "images/icon128.png" },
             
  "options_ui": {
      "page": "options.html",
      "chrome_style": true
  },

  "background": {
    "scripts":["js/background.js"],
    "persistent": false
  },
  
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ]
}
